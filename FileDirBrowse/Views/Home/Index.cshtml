<!DOCTYPE html>
<html ng-app="fileBrowserApp">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Server Browser</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <meta name="description" content="Server browser" />
</head>
<body ng-controller="tableCtrl">
<div class="container">
    <div class="row">
        <div class="col col-md-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Server Browser
                </div>
                <div class="alert alert-success" id="loc">{{dir}}</div>
                <div class="panel-body">

                    <table class="table table-striped table-hover table-fixed">
                        <thead>
                        <tr>
                            <th>10Mb & less file size</th>
                            <th>10Mb to 50Mb file size</th>
                            <th>Over 100Mb file size</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="alert alert-success">{{sizesCount.small}}</td>
                            <td class="alert alert-info">{{sizesCount.middle}}</td>
                            <td class="alert alert-danger">{{sizesCount.big}}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="btn btn-group">
                        <button class="btn btn-default" ng-click="upStairs()"><i class="glyphicon glyphicon-arrow-up"></i></button>
                        <button class="btn btn-info" ng-click="root()"><i class="glyphicon glyphicon-hdd"></i></button>
                    </div>
                    <table class="table table-striped table-responsive table-hover">
                        <thead>
                        <tr>
                            <th>
                            </th>
                            <th>Name</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="item in items" ng-click="expandItem(item)">
                            <td style="width: 30px"><i class="{{item.icon}}"></i></td>
                            <td>{{item.name}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="modal fade" id="alertTemplate" role="dialog" style="opacity: 0.8">
        <div class="modal-dialog">
            <div class="modal-body">
                <div class="alert alert-danger">
                    Access denied
                </div>
            </div>
        </div>
    </div>
</body>
</html>
